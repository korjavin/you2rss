# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL="postgres://user:password@localhost:5432/yt_podcaster?sslmode=disable"

# Redis Configuration
REDIS_ADDR="localhost:6379"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"

# Base URL for RSS feed generation
BASE_URL="http://localhost:8080"

# Audio Storage Path
AUDIO_STORAGE_PATH="audio"

# Rate Limiting Configuration (optional)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=5

# Subscription Limits (optional)
MAX_SUBSCRIPTIONS_PER_USER=100

# Processing Timeouts (optional)
PROCESS_VIDEO_TIMEOUT_MINUTES=15
CHANNEL_INFO_TIMEOUT_SECONDS=15
CHECK_CHANNEL_TIMEOUT_MINUTES=2

# Production Deployment (when using docker-compose.yml)
# Database Configuration for external postgres
# DATABASE_URL="postgres://user:password@postgres:5432/yt_podcaster?sslmode=disable"
# Redis Configuration for external redis
# REDIS_ADDR="redis:6379"
# Domain for Traefik routing
# DOMAIN="your-domain.com"